{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"target": "es6",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react"
	},
	"include": [
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"/**/*.js",
		"/**/*.jsx"
	]
}